<div class="container">



<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<%= form_with model: @user do |f| %>
<h3>User info</h3>

<% if @user.errors.any? %>
<h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
   <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
   </ul>
<% end %>
<% end %>


  <h6>Name</h6>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
  <h6>Image</h6>
  <%= f.file_field :profile_image, accept: "image/*" %>
  <h6>Introduction</h6>
  <%= f.text_area :introduction, placeholder: "Introduction" %>
  <div>
  <%= f.submit "Update User", class: "btn btn-secondary" %>
  </div>
<% end %>
</div>
</div>
</div>