<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/9b61b3d6da.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    　<div class="container">
    　 <a class="navbar-brand" href="/">Bookers</a>
    　 <ul class="navbar-nav ml-auto">
    <% if user_signed_in? %>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <li>
        <%= link_to user_path(current_user.id), class: 'nav-link text-light' do %>
        <i class="fa-solid fa-house"></i>
        <span>Home</span>
        <% end %>
      </li>
      <li>
        <%= link_to users_path, class: 'nav-link text-light' do %>
        <i class="fa-solid fa-users"></i>
        <span>Users</span>
        <% end %>
      </li>
      <li>
        <%= link_to books_path, class: 'nav-link text-light' do %>
        <i class="fa-solid fa-book-open"></i>
        <span>Books</span>
        <% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
        <i class="fa-solid fa-right-from-bracket"></i>
        <span>Log out</span>
        <% end %>
      </li>
    <% else %>
      <li>
        <a class="nav-link text-light" href="/"><i class="fa-solid fa-house"></i>Home</a>
        
      </li>
      <li>
        <a class="nav-link text-light" href="/home/about"><i class="fa-solid fa-link"></i>About</a>
      </li>
      <li>
        <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
        <i class="fa-solid fa-user-plus"></i>
        <span>Sign up</span>
        <% end %>
      </li>
      <li>
        <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
        <i class="fa-solid fa-right-to-bracket"></i>
        <span>Log in</span>
        <% end %>
      </li>
    <% end %>
    </div>
    </ul>
    </div>
    </div>
    </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
    	    </div>
        </div>
      </div>
    </footer>
    </body>
</html>
